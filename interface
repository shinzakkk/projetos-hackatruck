import SwiftUI

enum Appconstants {
    static let H: CGFloat = 120.0
    static let W: CGFloat = 150.0
}

struct ContentView: View {
    var body: some View {
        NavigationView{
            ZStack{
                VStack{
                    HStack{
                        Text("Bem vindo!")
                            .font(Font.custom("Nunito", size: 35))
                            .fontWeight(.regular)
                            .foregroundColor(.pretoclaro)
                            .multilineTextAlignment(.leading)
                            .offset(x: -20, y: -30)
                            .shadow(radius: /*@START_MENU_TOKEN@*/10/*@END_MENU_TOKEN@*/)
                            .frame(height: 150)
                        
                        Image(.logo)
                            .resizable()
                            .offset(x: 30, y: -30)
                            .scaledToFit()
                            .frame(width: 80, height: 80)
                    }
                    Spacer()
                    HStack{
                        NavigationLink(destination: AquarioDetailView()){
                            Aquario()
                        }
                        Spacer()
                            .frame(width: 15)
                        Rio()
                    }
                    Spacer()
                        .frame(height: 20)
                    HStack{
                        Mar()
                        Spacer()
                            .frame(width:15)
                        Piscina()
                    }
                    Spacer()
                        .frame(height: 20)
                    Outros()
                    Spacer()
                        .frame(height: 20)
                    HStack{
                        HStack{
                            
                            NavigationLink(destination: config()){
                                Image(systemName: "gearshape")
                                    .foregroundColor(.black)
                                    .font(.system(size: 35))
                                    .padding(.leading, 50)
                            }
                            Spacer()
                            
                            NavigationLink(destination: ContentView()){
                                Image(systemName: "house.fill")
                                    .foregroundColor(.black)
                                    .font(.system(size: 35))
                                    .padding()
                            }
                            Spacer()
                            
                            NavigationLink(destination: home()){
                                Image(systemName: "chart.bar.xaxis")
                                    .foregroundColor(.black)
                                    .font(.system(size: 35))
                                    .padding(.trailing, 55)
                            }
                        }
                    }
                    
                    
                }
            }
            .background(/*@START_MENU_TOKEN@*//*@PLACEHOLDER=View@*/Color("cinzaclaro")/*@END_MENU_TOKEN@*/)
        }
    }
}

struct AquarioDetailView: View {
    var body: some View {
        VStack {
            Text("Detalhes do Aquário")
                .font(.largeTitle)
                .padding()
            // Adicione mais conteúdo conforme necessário
        }
        .navigationTitle("Aquário")
    }
}

#Preview {
    ContentView()
}



struct Aquario: View {
    var body: some View {
        ZStack{
            Rectangle()
                .foregroundColor(.white)
                .frame(width: Appconstants.W, height: Appconstants.H)
                .cornerRadius(10.0)
                .shadow(color: .black.opacity(0.25),radius: 4)
            VStack{
                Image(systemName: "fish")
                    .resizable()
                    .scaledToFit()
                    .frame(width: 50, height: 50)
                    .foregroundColor(.black)
                Text("Aquario")
                    .font(Font.custom("nunito", size: 20))
                    .foregroundColor(.black)
                    
            }
            
        }
    }
}

